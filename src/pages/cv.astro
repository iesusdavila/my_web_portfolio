---
import Layout from '../layouts/Layout.astro';
import personalInfo from '../data/info.json';
---

<Layout title="Curriculum Vitae | Mechatronics Engineer Portfolio">
  <div class="container mx-auto px-4 py-12">
    <header class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Curriculum Vitae</h1>
      <p class="text-xl text-neutral-600 dark:text-neutral-400 max-w-3xl mx-auto">
        My professional experience, education, and qualifications in mechatronics engineering, robotics, and AI.
      </p>
      
      <div class="mt-8">
        <a 
          href={personalInfo.cvDownloadLink}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 rounded-lg bg-cyan-600 hover:bg-cyan-700 dark:bg-cyan-700 dark:hover:bg-cyan-600 text-white transition-colors"
        >
          <i data-feather="download" class="w-5 h-5 mr-2"></i>
          Download CV
        </a>
      </div>
    </header>

    <div class="cv-container max-w-5xl mx-auto bg-white dark:bg-neutral-800 rounded-2xl p-8 md:p-12 shadow-xl dark:shadow-2xl dark:shadow-cyan-900/10">
      <!-- Personal Information -->
      <div class="flex flex-col md:flex-row gap-8 mb-12 items-center md:items-start">
        <div class="w-40 h-40 rounded-full overflow-hidden bg-neutral-200 dark:bg-neutral-700 flex-shrink-0">
          <img 
            src={personalInfo.profileImage} 
            alt={personalInfo.name} 
            class="w-full h-full object-cover"
          />
        </div>
        
        <div class="flex-grow text-center md:text-left">
          <h2 class="text-3xl md:text-4xl font-bold mb-2">{personalInfo.name}</h2>
          <p class="text-xl text-cyan-600 dark:text-cyan-400 mb-4">{personalInfo.title}</p>
          
          <div class="text-neutral-600 dark:text-neutral-400 space-y-2">
            <p><i data-feather="mail" class="w-4 h-4 inline mr-2"></i> {personalInfo.email}</p>
            <p><i data-feather="phone" class="w-4 h-4 inline mr-2"></i> {personalInfo.phone}</p>
            <p><i data-feather="map-pin" class="w-4 h-4 inline mr-2"></i> {personalInfo.location}</p>
          </div>
          
          <div class="flex gap-4 mt-6 justify-center md:justify-start">
            {personalInfo.socialLinks.map((link) => (
              <a 
                href={link.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-neutral-800 dark:text-neutral-200 hover:text-cyan-600 dark:hover:text-cyan-400 transition-colors"
                aria-label={link.name}
              >
                <i data-feather={link.icon} class="w-5 h-5"></i>
              </a>
            ))}
          </div>
        </div>
      </div>
      
      <!-- Summary -->
      <section class="mb-12">
        <h3 class="text-2xl font-bold mb-4 border-b border-neutral-200 dark:border-neutral-700 pb-2">Professional Summary</h3>
        <p class="text-neutral-700 dark:text-neutral-300">{personalInfo.bio}</p>
      </section>
      
      <!-- Education -->
      <section class="mb-12">
        <h3 class="text-2xl font-bold mb-6 border-b border-neutral-200 dark:border-neutral-700 pb-2">Education</h3>
        
        <div class="space-y-8">
          {personalInfo.education.map((edu) => (
            <div class="flex flex-col md:flex-row md:items-center group">
              <div class="md:w-1/3 mb-2 md:mb-0">
                <span class="text-neutral-500 dark:text-neutral-400">{edu.years}</span>
              </div>
              <div class="md:w-2/3 md:border-l-2 md:border-neutral-200 md:dark:border-neutral-700 md:pl-6 relative">
                <div class="hidden md:block absolute w-3 h-3 bg-cyan-600 dark:bg-cyan-400 rounded-full -left-[7px] top-1.5 group-hover:scale-150 transition-transform"></div>
                <h4 class="text-xl font-bold">{edu.degree}</h4>
                <p class="text-neutral-600 dark:text-neutral-400 mb-1">{edu.institution}</p>
                <p class="text-neutral-700 dark:text-neutral-300 text-sm">{edu.description}</p>
              </div>
            </div>
          ))}
        </div>
      </section>
      
      <!-- Professional Experience -->
      <section class="mb-12">
        <h3 class="text-2xl font-bold mb-6 border-b border-neutral-200 dark:border-neutral-700 pb-2">Professional Experience</h3>
        
        <div class="space-y-8">
          {personalInfo.experience.map((exp) => (
            <div class="flex flex-col md:flex-row md:items-start group">
              <div class="md:w-1/3 mb-2 md:mb-0">
                <span class="text-neutral-500 dark:text-neutral-400">{exp.years}</span>
              </div>
              <div class="md:w-2/3 md:border-l-2 md:border-neutral-200 md:dark:border-neutral-700 md:pl-6 relative">
                <div class="hidden md:block absolute w-3 h-3 bg-cyan-600 dark:bg-cyan-400 rounded-full -left-[7px] top-1.5 group-hover:scale-150 transition-transform"></div>
                <h4 class="text-xl font-bold">{exp.position}</h4>
                <p class="text-neutral-600 dark:text-neutral-400 mb-2">{exp.company}</p>
                <ul class="list-disc pl-5 text-neutral-700 dark:text-neutral-300 space-y-1">
                  {exp.responsibilities.map((responsibility) => (
                    <li>{responsibility}</li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>
      </section>
      
      <!-- Skills -->
      <section class="mb-12">
        <h3 class="text-2xl font-bold mb-6 border-b border-neutral-200 dark:border-neutral-700 pb-2">Skills & Expertise</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {personalInfo.skillCategories.map((category) => (
            <div>
              <h4 class="text-lg font-semibold mb-3">{category.name}</h4>
              <div class="flex flex-wrap gap-2">
                {category.skills.map((skill) => (
                  <span class="px-3 py-1 bg-neutral-100 dark:bg-neutral-700 rounded-full text-sm">
                    {skill}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </section>
      
      <!-- Certifications -->
      <!-- <section class="mb-12">
        <h3 class="text-2xl font-bold mb-6 border-b border-neutral-200 dark:border-neutral-700 pb-2">Certifications</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {personalInfo.certifications.map((cert) => (
            <div class="p-4 border border-neutral-200 dark:border-neutral-700 rounded-lg hover:border-cyan-400 dark:hover:border-cyan-600 transition-colors">
              <h4 class="font-bold">{cert.name}</h4>
              <p class="text-neutral-600 dark:text-neutral-400 text-sm">{cert.issuer} â€¢ {cert.date}</p>
            </div>
          ))}
        </div>
      </section> -->
      
      <!-- Languages -->
      <section>
        <h3 class="text-2xl font-bold mb-6 border-b border-neutral-200 dark:border-neutral-700 pb-2">Languages</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {personalInfo.languages.map((language) => (
            <div>
              <div class="flex justify-between items-center mb-2">
                <span class="font-medium">{language.name}</span>
                <span class="text-sm text-neutral-600 dark:text-neutral-400">{language.level}</span>
              </div>
              <div class="w-full h-2 bg-neutral-200 dark:bg-neutral-700 rounded-full overflow-hidden">
                <div class="h-full bg-cyan-600 dark:bg-cyan-400 rounded-full" style={`width: ${language.proficiency}%`}></div>
              </div>
            </div>
          ))}
        </div>
      </section>
    </div>
  </div>
</Layout>
