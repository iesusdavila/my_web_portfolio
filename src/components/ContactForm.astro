<form id="contact-form" class="space-y-6" action="https://getform.io/f/avrwqxva" method="POST">
  <div>
    <label for="name" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
      Your Name
    </label>
    <input 
      type="text" 
      id="name" 
      name="name" 
      required
      class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-700 bg-white dark:bg-neutral-800 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-cyan-500 dark:focus:ring-cyan-600"
    />
  </div>
  
  <div>
    <label for="email" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
      Your Email
    </label>
    <input 
      type="email" 
      id="email" 
      name="email" 
      required
      class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-700 bg-white dark:bg-neutral-800 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-cyan-500 dark:focus:ring-cyan-600"
    />
  </div>
  
  <div>
    <label for="subject" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
      Subject
    </label>
    <input 
      type="text" 
      id="subject" 
      name="subject" 
      required
      class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-700 bg-white dark:bg-neutral-800 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-cyan-500 dark:focus:ring-cyan-600"
    />
  </div>
  
  <div>
    <label for="message" class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-1">
      Message
    </label>
    <textarea 
      id="message" 
      name="message" 
      rows="5" 
      required
      class="w-full px-4 py-2 rounded-lg border border-neutral-300 dark:border-neutral-700 bg-white dark:bg-neutral-800 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-cyan-500 dark:focus:ring-cyan-600"
    ></textarea>
  </div>
  
  <div id="form-status" class="hidden p-4 rounded-lg"></div>
  
  <div>
    <button 
      type="submit"
      class="w-full px-6 py-3 rounded-lg bg-cyan-600 hover:bg-cyan-700 dark:bg-cyan-700 dark:hover:bg-cyan-600 text-white transition-colors flex items-center justify-center"
    >
      <span id="button-text">Send Message</span>
      <span id="button-loading" class="hidden ml-2">
        <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
      </span>
    </button>
  </div>
</form>

<script src="/scripts/form.js" is:inline></script>
