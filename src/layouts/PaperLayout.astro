---
import Layout from './Layout.astro';

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    journal: string;
    authors: string[];
    date: string;
    doi?: string;
    pdf?: string;
  };
}

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | Papers`}>
  <div class="container mx-auto px-4 py-12 max-w-4xl">
    <a href="/papers" class="inline-flex items-center mb-8 text-cyan-600 dark:text-cyan-400 hover:underline">
      <i data-feather="arrow-left" class="w-4 h-4 mr-2"></i>
      Back to all papers
    </a>
    
    <h1 class="text-4xl md:text-5xl font-bold mb-6">{frontmatter.title}</h1>
    
    <div class="mb-6 italic text-neutral-600 dark:text-neutral-400">
      {frontmatter.authors.join(', ')}
    </div>
    
    <div class="mb-8">
      <p class="text-neutral-800 dark:text-neutral-200">
        <span class="font-semibold">Journal:</span> {frontmatter.journal}
      </p>
      <p class="text-neutral-600 dark:text-neutral-400">
        <span class="font-semibold">Published:</span> {frontmatter.date}
      </p>
      {frontmatter.doi && (
        <p class="text-neutral-600 dark:text-neutral-400">
          <span class="font-semibold">DOI:</span> 
          <a href={`https://doi.org/${frontmatter.doi}`} target="_blank" rel="noopener noreferrer" class="text-cyan-600 dark:text-cyan-400 hover:underline">
            {frontmatter.doi}
          </a>
        </p>
      )}
    </div>
    
    <div class="prose prose-lg dark:prose-invert max-w-none mb-8">
      <h2>Abstract</h2>
      <p>{frontmatter.description}</p>
      <slot />
    </div>
    
    <div class="flex flex-wrap gap-4 mt-12">
      {frontmatter.pdf && (
        <a 
          href={frontmatter.pdf}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 rounded-lg bg-cyan-600 hover:bg-cyan-700 dark:bg-cyan-700 dark:hover:bg-cyan-600 text-white transition-colors"
        >
          <i data-feather="file-text" class="w-5 h-5 mr-2"></i>
          Download PDF
        </a>
      )}
      
      {frontmatter.doi && (
        <a 
          href={`https://doi.org/${frontmatter.doi}`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 rounded-lg bg-neutral-800 hover:bg-neutral-700 dark:bg-neutral-700 dark:hover:bg-neutral-600 text-white transition-colors"
        >
          <i data-feather="external-link" class="w-5 h-5 mr-2"></i>
          View Publication
        </a>
      )}
    </div>
  </div>
</Layout>
